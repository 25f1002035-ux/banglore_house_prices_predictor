{
  "buildCommand": "pip install -r requirements.txt",
  "outputDirectory": "public",
  "python": {
    "version": "3.9"
  },
  "functions": {
    "api/**/*.py": {
      "runtime": "python3.9"
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/$1.py"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/:path*.py"
    },
    {
      "source": "/:path*",
      "destination": "/index.html"
    }
  ]
}
